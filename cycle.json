{
  "version": "1.0",
  "containers": {
    "redis-node-1": {
      "name": "redis-node-1",
      "image": {
        "name": "redis-node-1",
        "origin": {
          "type": "docker-file",
          "details": {
            "context_dir": "/master",
            "build_file": "/master/Dockerfile"
          }
        }
      },
      "stateful": true,
      "config": {
        "network": {
          "public": "disable",
          "hostname": "redis-node-1",
          "ports": [ "6379:6379" ]
        },
        "deploy": {
          "instances": 1
        }
      },
      "volumes": [
        {
          "local": {
            "max_size": "3G"
          },
          "destination": "/data"
        },
        {
          "local": {
            "max_size": "3G"
          },
          "destination": "/var/lib/config"
        }
      ]
    },
    "redis-node-2": {
