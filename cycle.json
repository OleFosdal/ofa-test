{
  "version": "1.0",
  "containers": {
    "redis-1": {
      "name": "redis-1",
      "image": {
        "name": "redis-1",
        "origin": {
          "type": "docker-file",
          "details": {
            "context_dir": "/main",
            "build_file": "/main/Dockerfile"
          }
        }
      },
      "stateful": true,
      "config": {
        "network": {
          "public": "disable",
          "hostname": "redis-1",
          "ports": [ "6379:6379" ]
        },
        "deploy": {
          "instances": 1
        }
      },
      "volumes": [
        {
          "local": {
            "max_size": "3G"
          },
          "destination": "/data"
        },
        {
          "local": {
            "max_size": "3G"
          },
          "destination": "/var/lib/config"
        }
      ]
    },
    "redis-2": {
      "name": "redis-2",
      "image": {
        "name": "redis-2",
